#include <stdio.h>

int main() 
{
    int n;
    printf("enter the number:");
    scanf("%d",&n);
    int sp=n-1;
    int k=1;
    int m=1;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<sp;j++)
        {
            printf("  ");
        }
        sp--;
        for(int o=0;o<m;o++)
        {
            printf("%d ",k);
            k++;
        }
        m=m+2;
        printf("\n");
    }
}

